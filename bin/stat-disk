#!/bin/sh

case `uname -s` in
  "Darwin")
    df -H / | \
      egrep '/' | \
      awk '{ print $2,$3,$4 }'
    ;;
  "FreeBSD")
    zpool get size,allocated,free \
      $( \
        df -H / | \
        egrep '/' | \
        awk -F'/' '{print $1}' \
      ) | \
      tail -3 | \
      awk '{ printf "%s ", $3 }' | \
      awk '{ print $0 }'
    ;;
esac

