#!/bin/sh

netstatcmd=netstat
routecmd='$netstatcmd -nr'
ifconfigcmd=ifconfig
ifconfigacmd='$ifconfigcmd -a'

dec_to_chr() {
  dec=$@
  ori=$dec
  ##### diff = beyond last letter - first letter
  ##### diff = 127 - 101
  ##### diff = 26
  diff=26
  ##### plus 10 to match the perl version of jname
  dec=$(( dec + 10 ))
  while [ $dec -lt 101 ]; do
    dec=$(( dec + diff ))
  done
  while [ $dec -gt 126 ]; do
    dec=$(( dec - diff ))
  done
  if [ $dec -gt 107 ]; then
    dec=$(( dec + 2 ))
  fi
  if [ $dec -gt 117 ]; then
    dec=$(( dec + 2 ))
  fi
  if [ $dec -gt 127 ]; then
    dec=$(( dec + 2 ))
  fi
  chr=`printf '%b' '\'$dec`
#  echo $ori'  '$dec'  '$chr
  printf '%s' $chr
}

hex_to_chr() {
  hex=$@
  dec=`printf '%d' '0x'$@`
  chr=`dec_to_chr $dec`
  printf '%s' $chr
}

nicjname() {
  name=''
  nic=$@
  if [ -n "$nic" ]; then
    mac=`ifconfig ${nic} | egrep -o "([0-9a-f]{2}:){5}[0-9a-f]{2}" | tr -d ':' | sort -u`
    if [ -n "$mac" ]; then
      octets=`echo $mac | egrep -o '[[:alnum:]]{2}'`
      for a in $octets; do
        name="${name}`hex_to_chr ${a}`"
      done
    fi
  fi
  echo $name
}

defaultnicjname() {
  name=''
  nic=`netstat -rn | egrep "default" | head -1 | awk '{ print $NF }'`
  if [ -n "$nic" ]; then
    name=`nicjname $nic`
  fi
  echo $name
}

aliasnicjname() {
  name=''
  nics=`ifconfig | egrep "^[[:alpha:]]" | awk -F':' '{print $1}'`
  for a in $nics; do
    mac=`ifconfig ${a} | egrep -o "([0-9a-f]{2}:){5}[0-9a-f]{2}" | tr -d ':' | sort -u`
    if [ -n "$mac" ]; then
      octets=`echo $mac | egrep -o '[[:alnum:]]{2}'`
      for b in $octets; do
        name="${name}`hex_to_chr ${b}`"
      done
      name="${name}-"
    fi
  done
  defnicjname=`defaultnicjname`
  if [ -n "$defnicjname" ]; then
    name=`echo $name | sed "s/${defnicjname}-//g"`
    name="${defnicjname}-$name"
  fi
  name=`echo $name | sed 's/-$//g'`
  echo $name
}

if [ -z "${1}" ]; then
  aliasnicjname
else
  if [ "${1}" = "d" ]; then
    defaultnicjname
  else
    nicjname ${1}
  fi
fi

