if [ "$( id -u )" != "0" ]; then
	echo "Need to be root!"
	exit 1
fi

# TODO, if MacOSX10.10.sdk does not exist, attempt to fake it with a link to 10.9
# some ports still compile
xcode-select -s /Applications/Xcode.app/Contents/Developer
if [ ! -e /Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX10.10.sdk ]; then
  ln -s MacOSX10.9.sdk /Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX10.10.sdk
fi

DONOTUSE="
encfs
textmate2
VLC
FileZilla
FreeRDP
"

FAILED_OSX_10_9="
BwanaDik
ShiftIt
Growl
HandBrake
Pallet
gimp-app
adium
inkscape-app
mplayer2
"

PORTS="
librsync
sqlite2
libtasn1
gnutls
pkgconfig
openvpn2
macports-notifier
terminal-notifier
iftop
MenuMeters
KeePassX
keka
wget
flac
ghostscript
bchunk
gnupg2
ffmpeg
transmission
inkscape
scribus
fugu
xorg-server
unison
go
mercurial
"

port selfupdate
port upgrade installed
port install $PORTS
