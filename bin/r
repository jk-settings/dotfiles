#!/bin/sh

if which rsync >/dev/null 2>&1 ; then
  rsync=$( which rsync )
else
  echo "Command rsync not found"
  exit 1
fi

$rsync -virhLP --exclude ".DS_Store" "$@"
# -L follows links to actual file
# -m for skipping empty folders
# -t for time
# -c for checksum
# -o for owner
# -g for group
# -p for permission

